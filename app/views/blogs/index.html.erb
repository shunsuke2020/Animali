<div class="col-md-8 offset-md-1">
  <%= flash[:notice] %>
   <h2><i class="fas fa-paw"></i> ブログ一覧 <i class="fas fa-paw"></i></h2>
     <i class="fas fa-pencil-alt"></i> <%= link_to "ブログを投稿する",  new_blog_path(@blogs) %>
    
    <div class="main clearfix">
      <% @blogs.each do |blog| %>
      <div class="blog-box">
        <div class = "image-box">
          <%= link_to blog_path(blog) do %>
              <%= attachment_image_tag blog, :image, :fill, 150, 150, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>
          <p><%= link_to blog.title, blog_path(blog) %></p>
          <% end %>
      <% end %>
        </div>
      </div>
    </div>
</div>
    

 <i class="fas fa-pencil-alt"></i><%= link_to "ブログを投稿する",  new_blog_path(@blogs) %>
 <%= paginate @blogs, class: "paginate" %>