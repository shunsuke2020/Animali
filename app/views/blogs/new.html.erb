<section class="slice sct-color-1">
  <div class="container">
    <div class="row">
      <div class="col-md-12">

        <div class="row">
          <div class="col-md-6 col-md-offset-3 post_image_form">
            <div class="section-title-wrapper style-1 v1">
              <h3 class="section-title section-title-sm left">
                <span>ブログ投稿フォーム</span>
              </h3>
            </div>

            
            <%= form_with(model: @blog, local: true) do |form| %>
              <%= form.radio_button :ganre, :dog %>
              <i class="fas fa-dog"></i><%= form.label :ganre, "ワンちゃん", {value: :dog, style: "display: inline-block;"} %><br>
              <%= form.radio_button :ganre, :cat %>
              <i class="fas fa-cat"></i><%= form.label :ganre, "ネコちゃん", {value: :cat, style: "display: inline-block;"} %><br>
              <%= form.radio_button :ganre, :other %>
              <i class="fas fa-otter"></i><%= form.label :ganre, "その他のペット", {value: :other, style: "display: inline-block;"} %>
            <% end %>
                        
            <%= form_for(@blog, url: blogs_path) do |f| %>
              <% if @blog.errors.any? %>
                <div id="error_explanation">
                  <h2><%= @blog.errors.count %>件のエラーが発生しました。</h2>
                  <ul>
                  <% @blog.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="row">
                <div class="col-sm-12">
                  <%= f.attachment_field :image %>
                </div>
              </div>
              <br>
              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group has-icon">
                    <label class="control-label sr-only">title</label>
                    <%= f.text_field :title, class:"form-control", placeholder:"タイトル" %>
                    <span class=" form-control-icon" aria-hidden="true"></span>
                  </div>
                </div>
                <div class="col-sm-6">
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <%= f.text_area :sentence, class:"form-control", rows:"3", placeholder:"ブログの内容" %>
                </div>
              </div>
              <hr>
              <%= f.submit "送信", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>